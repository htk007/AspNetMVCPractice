@using MvcStok.Models.Entity
@model List<TBLKATEGORILER>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<table class="table table-bordered">
    <tr>
        <th>KATEGORİ ID</th>
        <th>KATEGORI ADI</th>
        <th></th>
        <th></th>
    </tr>
    <tbody>
         @foreach(var ktgr in Model)
         {
        <tr>
            <th>@ktgr.KATEGORIID</th>
            <td>@ktgr.KATEGORIAD</td>
            <td><a href="/Kategori/Sil/@ktgr.KATEGORIID" class="btn btn-danger">SİL</a></td>
            <td><a href="/Kategori/Guncelle/@ktgr.KATEGORIID" class="btn btn-warning">GUNCELLE</a></td>
        </tr>
         }
    </tbody>
</table>
<a href="/Kategori/YeniKategori" class="btn btn-primary">Yeni kategori ekle</a>

